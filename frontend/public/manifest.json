{
  "manifest_version": 3,
  "name": "EcoStyle - Sustainable Fashion Assistant",
  "version": "1.0.0",
  "description": "Discover sustainable fashion alternatives and brand transparency while you shop",

  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage"
  ],

  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],

  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "favicon-96x96.png",
      "48": "favicon-96x96.png",
      "128": "web-app-manifest-192x192.png"
    }
  },

  "icons": {
    "16": "favicon-96x96.png",
    "48": "favicon-96x96.png",
    "128": "web-app-manifest-192x192.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "css": ["content-styles.css"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ]
}
